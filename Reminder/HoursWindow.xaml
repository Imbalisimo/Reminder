<Window x:Class="Reminder.HoursWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Reminder"
        mc:Ignorable="d"
        Title="HoursWindow" Height="450" Width="800">
    <Grid>
        <ListBox Name="lb_hours" HorizontalContentAlignment="Center" VerticalContentAlignment="Stretch" HorizontalAlignment="Left" Height="134" Margin="10,161,0,0" VerticalAlignment="top" Width="772">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="2"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>
        <Button Content="OK" HorizontalAlignment="Left" Margin="348,359,0,0" VerticalAlignment="Top" Width="75" Click="OKButton_Click" RenderTransformOrigin="0.453,-2.7"/>
        <Label Content="Choose hours when do you want to be reminded" HorizontalAlignment="Left" Margin="120,87,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
